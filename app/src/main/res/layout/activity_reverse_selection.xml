<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:id="@+id/relativeLayoutReversSelection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA">


        <TextView
            android:id="@+id/textViewCreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:hint="Выберите реверс"
            android:textSize="35dp"
            android:textColorHint="#000000"
            android:shadowColor="#7d7d7d"
            android:shadowRadius="5"
            android:shadowDy="8"
            android:fontFamily="@font/neo_sans_pro_regular"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonFirstReverse"
                android:theme="@style/Theme.Custom"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:hint="Первый"
                android:textColor="#ffffff" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSecondtReverse"
                android:theme="@style/Theme.Custom"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:hint="Второй"
                android:textColor="#ffffff" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonThirdReverse"
                android:theme="@style/Theme.Custom"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:hint="Третий"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>