<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayoutChooseTime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA">



        <TextView
            android:id="@+id/textViewSelectTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:hint="Свободное время"
            android:textSize="35dp"
            android:textColorHint="#000000"
            android:shadowColor="#7d7d7d"
            android:shadowRadius="5"
            android:shadowDy="8"
            android:fontFamily="@font/neo_sans_pro_regular"/>


        <LinearLayout
            android:id="@+id/linearLayoutChooseTime11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/textViewSelectTime"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ListView
                android:id="@+id/listViewTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="20dp">
            </ListView>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutProgressBar11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone">
            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateDrawable="@drawable/progress_bar"
                android:indeterminateOnly="true"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_below="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Уточняем время..."
                android:textColor="#ffff00"
                android:textSize="15dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>