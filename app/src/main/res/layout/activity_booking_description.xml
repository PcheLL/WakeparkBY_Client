<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA">




    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewBookingDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:hint="Подтверждение"
            android:textSize="35dp"
            android:textColorHint="#000000"
            android:shadowColor="#7d7d7d"
            android:shadowRadius="5"
            android:shadowDy="8"
            android:fontFamily="@font/neo_sans_pro_regular" />

        <LinearLayout
            android:layout_below="@+id/textViewBookingDes"
            android:id="@+id/linearLayoutWeather"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="0dp"
            android:paddingLeft="10dp"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewBookingDescription"
                    app:cardElevation="5dp"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mtrl_card_spacing"
                    android:layout_marginTop="@dimen/mtrl_card_spacing"
                    android:layout_marginRight="@dimen/mtrl_card_spacing"
                    android:minHeight="200dp"
                    app:cardCornerRadius="30dp">
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/layout_bg"
                        android:orientation="vertical">
                        <LinearLayout
                            android:paddingLeft="30dp"
                            android:paddingTop="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/textViewNameLogoysk"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:text="ГСОК Логойск "
                                    android:textSize="20sp"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">
                                <TextView
                                    android:paddingLeft="3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:text="20.05.2019"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:paddingLeft="3dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="("
                                        android:textSize="10sp"
                                        />
                                    <TextView
                                        android:paddingLeft="3dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="2"
                                        android:textSize="10sp"
                                        />
                                    <TextView
                                        android:paddingLeft="3dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" реверс"
                                        android:textSize="10sp"
                                        />
                                    <TextView
                                        android:paddingLeft="3dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=")"
                                        android:textSize="10dp"
                                        />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@drawable/separating_line"/>

                        <LinearLayout
                            android:paddingLeft="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">
                            <ListView
                                android:layout_width="150dp"
                                android:layout_height="100dp"></ListView>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    android:theme="@style/Theme.Custom"
                    android:id="@+id/buttonDrozdy"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:hint="Забронировать"
                    android:textColorHint="#ffffff"
                    android:textSize="14dp"
                    app:cornerRadius="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/cardViewBookingDescription"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>





        </LinearLayout>
        <RelativeLayout

            android:id="@+id/relativeLayoutProgressBarWeather"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

            android:visibility="gone">

            <ProgressBar

                android:id="@+id/progressBarMainMenu"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:indeterminateDrawable="@drawable/progress_bar"

                android:indeterminateOnly="true"

                android:layout_centerHorizontal="true"/>

            <TextView

                android:layout_below="@+id/progressBarMainMenu"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:text="Уточняем погоду..."

                android:textColor="#ffff00"

                android:textSize="15dp"

                android:layout_centerHorizontal="true"

                android:layout_marginTop="5dp"/>

        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>