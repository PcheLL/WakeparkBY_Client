<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorYelow</item>

    </style>



    <style name="DayOfWeekPickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="colorControlActivated">#000000</item>
    </style>

    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:background">#000000</item>
        <item name="android:divider">#ffff00</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">#ffff00</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Theme.Custom" parent="Theme.MaterialComponents.Light">
        <item name="android:backgroundTint">#e8cc14</item>
    </style>

    <style name="CustomToolbarTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorYelow</item>
        <item name="colorPrimary">@color/colorWhite</item>
    </style>

    <style name="CustomDatePicker" parent="CustomToolbarTheme">

    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorYelow</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorYelow</item>
    </style>

    <style name="Theme.EditText" parent="Theme.MaterialComponents.Light">
        <item name="android:backgroundTint">#000000</item>
    </style>

    <style name="MyDarkToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorBlack</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:textColor">@color/colorBlack</item>
    </style>


</resources>
